{
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "useDefineForClassFields": true,
        "rootDir": ".",
        "module": "ESNext",

        /* Bundler mode */
        "moduleResolution": "node",

        /* Linting */
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "declaration": true,
        "outDir": "dist",
        "skipLibCheck": true
    },
    "include": ["src", "index.ts"]
}
